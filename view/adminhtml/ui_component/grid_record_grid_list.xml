		<column name="colorstatus" class="Halfprice\Designers\Ui\Component\Listing\Grid\Column\Colorstatus">
            <settings>
                <!-- <filter>text</filter> -->
				<sorting>false</sorting>
				<bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true"></label>
            </settings>
        </column>
        <column name="increment_id" sortOrder="6">
            <settings>
                <!-- <filter>text</filter> -->
                <label translate="true">Order id</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <!-- <filter>dateRange</filter> -->
                <dataType>date</dataType>
                <label translate="true">Purchase Date</label>
                <sorting>desc</sorting>
            </settings>
        </column>
		<column name="assigned_on" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <!-- <filter>dateRange</filter> -->
                <dataType>date</dataType>
                <label translate="true">Assigned On</label>
            </settings>
        </column>
		<column name="billing_name">
            <settings>
                <!-- <filter>text</filter> -->
                <label translate="true">Billing Name</label>
            </settings>
        </column>
		<column name="status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options class="Magento\Sales\Ui\Component\Listing\Column\Status\Options"/>
                <dataType>select</dataType>
                <label translate="true">Order status</label>
            </settings>
        </column>
		<column name="shipping_information">
            <settings>
             <!--    <filter>text</filter> -->
                <label translate="true">Shipping Service</label>
            </settings>
        </column>
		<actionsColumn name="proofs" class="Halfprice\Designers\Ui\Component\Listing\Grid\Column\Manageproofs">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Manage Proofs</item>

                </item>
            </argument>
        </actionsColumn>
		<column name="base_grand_total" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
             <!--    <filter>textRange</filter> -->
                <label translate="true">Order Total</label>
            </settings>
        </column>
		<column name="items" class="Halfprice\Designers\Ui\Component\Listing\Grid\Column\Itemscount">
          <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
					<item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
					<item name="filter" xsi:type="boolean">false</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Items</item>
                </item>
            </argument>
        </column>
